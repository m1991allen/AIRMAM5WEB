@model AIRMAM5.DBEntity.Models.CodeSet.CodeSetViewModel
@{
    Layout = "";
}
@HtmlHelper.HtmlModal("DetailModal", "自訂代碼【"+ @Model.fsTITLE + "】",
@<form class="ui inverted form">
    <div class="three fields">
        <div class="six wide field">
            @Html.LabelFor(model => model.fsCODE_ID)
            @Html.TextBoxFor(model => model.fsCODE_ID, new { @readonly = "readonly" })
        </div>
        <div class="six wide field">
            @Html.LabelFor(model => model.fsTITLE)
            @Html.TextBoxFor(model => model.fsTITLE, new { @readonly = "readonly" })
        </div>
        <div class="four wide field">
            @Html.LabelFor(model => model.IsEnabled)
            @{ string showEnabled = (@Model.IsEnabled) ? "是" : "否"; }
            <input type="text" name="name" value="@showEnabled" readonly />
        </div>
    </div>
    <div class="field">
        @Html.LabelFor(model => model.fsNOTE)
        @Html.TextAreaFor(model => model.fsNOTE, new { @readonly = "readonly", @row = 6 })
    </div>
    <div class="four fields">
        <div class="four wide field">
            @Html.LabelFor(model => model.fdCREATED_DATE)
            @Html.TextBoxFor(model => model.fdCREATED_DATE, string.Format("{0:yyyy/MM/dd HH:mm:ss}", Model.fdCREATED_DATE), new { @readonly = "readonly" })
        </div>
        <div class="four wide field">
            @Html.LabelFor(model => model.fsCREATED_BY)
            @Html.TextBoxFor(m => m.fsCREATED_BY, new { @readonly = "readonly" })
        </div>
        <div class="four wide field">
            @Html.LabelFor(model => model.fdUPDATED_DATE)
            @Html.TextBoxFor(model => model.fdUPDATED_DATE, string.Format("{0:yyyy/MM/dd HH:mm:ss}", Model.fdUPDATED_DATE), new { @readonly = "readonly" })
        </div>
        <div class="four wide field">
            @Html.LabelFor(model => model.fsUPDATED_BY)
            @Html.TextBoxFor(m => m.fsUPDATED_BY, new { @readonly = "readonly" })
        </div>
    </div>

</form>,  @<button class="ui yellow cancel button" type="button">關閉</button>)