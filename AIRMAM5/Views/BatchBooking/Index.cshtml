
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

@section Styles{
    <link href="~/Content/iftame_style/BatchBooking/BatchBookingIndex.min.css" rel="stylesheet" />
    <link href="~/Content/inspireTreeJS/inspire-tree-dark.min.css" rel="stylesheet" />
}

<div class="ui stackable grid x-main-grid">
    <div class="three wide column">
        @HtmlHelper.Breadcrumb(new string[] { "檔案調用", "批次調用" })
        <!--樹狀圖--> @HtmlHelper.Tree(false)   <!--樹狀圖-->
    </div>
    <div class="thirteen wide column row" style="padding-bottom:55px;position: relative;top: 10px;">
        <!--左側-->
        <div class="nine wide column">
            <div class="ui secondary pointing stackable menu" id="MediaTypeMenu">
                <div class="item">主題：</div>
                <a id="x-subject-button" class="item"> 無選擇主題 <i class="dropdown icon"></i> </a>
                <!--主題列表區域-->
                <div class="ui fluid popup bottom left transition hidden">
                    <div class="ui one column relaxed equal height divided grid">
                        <div class="column">
                            <h4 class="ui inverted header">主題列表</h4>
                            <ul class="x-subjectItems" id="SubjectItems">
                                <div class="ui basic inverted fluid segment" style="width:100%;">沒有資料顯示</div>
                            </ul>
                        </div>
                    </div>
                </div>
                <!--主題列表區域-->
                <div class="right menu">
                    <a class="active item x-menuitem" data-type="V">影</a>
                    <a class="item x-menuitem" data-type="A">音</a>
                    <a class="item x-menuitem" data-type="P">圖</a>
                    <a class="item x-menuitem" data-type="D">文</a>
                </div>
            </div>
            <div id="Table"></div>
            <div class="ui active dimmer tabulator" id="x-table-loader" style="opacity:0.5;">
                <div class="tabulator-loader"> <div class="ui text loader"><div class="tabulator-loader-msg tabulator-loading">搜尋中</div></div></div>
            </div>
        </div>
        <!--左側 END-->
        <!--右側-->
        <div class="seven wide column">
            <div class="ui secondary pointing stackable menu">
                <div class="item">已加入清單</div>
            </div>
            <div id="TargetTable" style="background: rgba(62,62,62,1);"></div>
        </div>
        <!--右側END-->

    </div>

</div>

<!--燈箱區域-->
@Html.Partial("~/Views/Shared/_ModalArea.cshtml")
@Html.Action("_Booking", "BatchBooking")

@section Scripts{
    @Html.Partial("~/Views/Bundle/SubjectTreePlugin_Js.cshtml")
    @Html.Partial("~/Views/Bundle/BatchBookingIndex_Js.cshtml")
}