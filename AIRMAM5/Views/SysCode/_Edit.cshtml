@model AIRMAM5.DBEntity.Models.CodeSet.CodeSetEditModel
@{
    Layout = "";
}
@HtmlHelper.HtmlModal("EditModal", "編輯系統代碼資料",
@<div>
    @using (Ajax.BeginForm("Edit", "SysCode",
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "ShowMessage", OnFailure = "ShowMessage" },
        new { role = "form", @class = "ui form", @id = "EditForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="three fields">
            <div class="six wide required field">
                @Html.LabelFor(model => model.fsCODE_ID)
                @Html.TextBoxFor(model => model.fsCODE_ID, new { @readonly = "readonly" })
            </div>
            <div class="six wide required field">
                @Html.LabelFor(model => model.fsTITLE)
                @Html.TextBoxFor(model => model.fsTITLE)
                @*@Html.HiddenFor(model=>model.fsTBCOL)
                @Html.HiddenFor(Model=>Model.fsTYPE)*@
            </div>
            <div class="four wide field">
                @Html.LabelFor(model => model.IsEnabled)
                <div class="ui checkbox" id="CheckEditenabled">
                    @Html.CheckBoxFor(Model => Model.IsEnabled)
                    <label></label>
                </div>
            </div>
        </div>
        <div class="field">
            @Html.LabelFor(model => model.fsNOTE)
            @Html.TextAreaFor(model => model.fsNOTE, new { @row = 6 })
        </div>
     }
</div>,
        @<div>
            <button class="ui yellow ok button" type="submit">儲存</button>
            <button class="ui cancel  button" type="button">取消</button>
        </div>
   )
