}

@HtmlHelper.Breadcrumb(new string[] { "查詢作業", "檢索記錄查詢" })


<div class="_Filter">
    @Html.Action("_Search", "L_Search")
</div>
<div id="Table"></div>

<!--燈箱區域-->
@Html.Partial("~/Views/Shared/_ModalArea.cshtml")

@section Scripts{
    <script src="~/Content/dayJS/dayjs.min.js"></script>
    <script src="~/Content/semanticUIdatepicker/calendar.min.js" type="text/javascript"></script>
    @Html.Partial("~/Views/Bundle/LSearchIndex_Js.cshtml")
    @*<script src="~/Scripts/dist/LSearchIndex.min.js"></script>*@

    <script>
    /*檢視公告*/
           function CallDetailModal(RowId) {
             $.ajax({
             url: "@Url.Action("_Details", "L_Search")?id=" + RowId,
             type: "GET",
             contentType: "application/json",
             }).done(function (data) {
                 $("#DetailsArea").empty().append(data);
                 $('#DetailsL_SearchModal').modal('show');
             }).fail(function () {

             });
     }
    </script>
}
